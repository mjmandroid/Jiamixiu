<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">
    <com.project.jiamixiu.widget.CustomerToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#e7e7e7"/>
    <EditText
        android:id="@+id/et_title"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:hint="请输入标题"
        android:textColor="#666666"
        android:textSize="13sp"
        android:paddingLeft="10dp"
        android:background="@null"/>
    <ImageView
        android:id="@+id/iv_title"
        android:layout_width="200dp"
        android:layout_marginLeft="10dp"
        android:scaleType="centerCrop"
        android:layout_height="150dp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="20dp"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#e7e7e7"/>
    <TextView
        android:id="@+id/tv_game_type"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:text="游戏类型"
        android:drawableLeft="@mipmap/icon_upload_type"
        android:drawablePadding="10dp"
        android:paddingLeft="10dp"
        android:gravity="center_vertical"
        android:textSize="13sp"
        android:textColor="#333333"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#e7e7e7"/>
    <TextView
        android:id="@+id/tv_game_tags"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:text="游戏标签"
        android:gravity="center_vertical"
        android:drawableLeft="@mipmap/icon_upload_tag"
        android:drawablePadding="15dp"
        android:paddingLeft="10dp"
        android:textSize="13sp"
        android:textColor="#333333"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#e7e7e7"/>
    <LinearLayout
        android:id="@+id/ll_look"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="谁能看见"
            android:gravity="center_vertical"
            android:textSize="13sp"
            android:drawableLeft="@mipmap/icon_upload_lock"
            android:paddingLeft="10dp"
            android:drawablePadding="15dp"
            android:textColor="#333333"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="公开"
            android:gravity="center_vertical"
            android:textSize="13sp"
            android:layout_marginRight="15dp"
            android:textColor="#666666"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#e7e7e7"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>
    <com.project.jiamixiu.widget.RoundButton xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/btn_commit"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:textSize="15sp"
        android:text="发布"
        app:btnCornerRadius="4dp"
        android:layout_marginBottom="2dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        app:btn_normalSolidColor="#00bbac"
        android:textColor="@color/white"/>
</LinearLayout>