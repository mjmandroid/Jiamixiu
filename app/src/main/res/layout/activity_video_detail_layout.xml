<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/toolbar_height"
        android:background="@color/white">
        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="@color/text_color_33"
            android:textSize="@dimen/title_size"
            android:text="注册"
            android:gravity="center"/>
        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:src="@mipmap/icon_back"/>
    </RelativeLayout>
    <cn.jzvd.JzvdStd
        android:id="@+id/video"
        android:layout_width="match_parent"
        android:layout_height="180dp"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.project.jiamixiu.widget.CircleImageView
            android:id="@+id/iv_nick"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="10sp"
            android:layout_marginBottom="15dp"/>
        <TextView
            android:id="@+id/tv_nickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="sss"
            android:layout_alignTop="@id/iv_nick"
            android:layout_toRightOf="@id/iv_nick"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:textSize="12sp"
            android:textColor="#333333"/>
        <TextView
            android:id="@+id/tv_aboutnum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1 关注量"
            android:layout_alignBottom="@id/iv_nick"
            android:layout_toRightOf="@id/iv_nick"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="5dp"
            android:textSize="12sp"
            android:textColor="#333333"/>
        <Button
            android:id="@+id/btn_about"
            android:layout_width="65dp"
            android:layout_height="26dp"
            android:background="@mipmap/icon_aboutme"
            android:layout_alignParentRight="true"
            android:text="关注"
            android:textSize="12sp"
            android:textColor="@color/white"
            android:layout_centerInParent="true"
            android:layout_marginRight="20dp"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#e7e7e7"/>
    <TextView
        android:id="@+id/tv_playnum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:layout_marginTop="50dp"
        android:textColor="#666666"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <FrameLayout
            android:id="@+id/fl_comment"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@mipmap/icon_comment"/>
        </FrameLayout>
        <FrameLayout
            android:id="@+id/fl_praise"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@mipmap/icon_praise"/>
        </FrameLayout>
        <FrameLayout
            android:id="@+id/fl_favorite"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@mipmap/icon_favorite"/>
        </FrameLayout>
        <FrameLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@mipmap/icon_share"/>
        </FrameLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_comment_num"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="#666666"
            android:textSize="12sp"
            android:text="0"/>
        <TextView
            android:id="@+id/tv_praise_num"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="#666666"
            android:textSize="12sp"
            android:text="0"/>
        <TextView
            android:id="@+id/tv_favorite_num"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="#666666"
            android:textSize="12sp"
            android:text="0"/>
        <TextView
            android:id="@+id/tv_share_num"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="#666666"
            android:textSize="12sp"
            android:text="0"/>
    </LinearLayout>
</LinearLayout>